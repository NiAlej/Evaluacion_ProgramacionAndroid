<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#29547E">


    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="49dp"
        android:layout_marginBottom="600dp"
        android:background="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Tech Horizon"
            android:textColor="#29547E"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="358dp"
        android:layout_marginBottom="184dp"
        android:background="#FFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="¡Bienvenido!"
            android:textColor="#29547E"
            android:textSize="30sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Correo electronico"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:hint="Contraseña"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="259dp"
            android:layout_height="58dp"
            android:layout_marginHorizontal="51dp"
            android:backgroundTint="#29547E"
            android:gravity="center"
            android:text="Mantener sesión iniciada"

            tools:ignore="MissingConstraints" />

        <Button
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="31dp"
            android:layout_marginVertical="0dp"
            android:background="@drawable/bordes_redondos"
            android:backgroundTint="#29547E"
            android:gravity="center"
            android:onClick="IniciaSesion"
            android:text="Ingresar"
            android:textColor="#FFF" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="148dp"
            android:layout_height="37dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Idioma de preferencia:"
            android:textColor="#FFF"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="598dp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="111dp"
            android:layout_height="54dp"
            android:text="Español"
            android:textColor="#FFF"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="616dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="111dp"
            android:layout_height="54dp"
            android:text="Ingles"
            android:textColor="#FFF"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="616dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>